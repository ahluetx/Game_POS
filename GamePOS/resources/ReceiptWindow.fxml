<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="299.0" prefWidth="520.0" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.tridenttech.cpt237.game.controllers.ReceiptWindowController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <children>
       <TextArea fx:id="receiptTextArea" editable="false" prefHeight="168.0" prefWidth="430.0" wrapText="true" />
       <HBox alignment="CENTER" spacing="10">
          <children>
              <Button fx:id="acceptButton" onAction="#onAccept" text="Accept" />
              <Button fx:id="cancelButton" onAction="#onCancel" text="Cancel" />
          </children>
       </HBox>
   </children>
</VBox>
